<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/bill_item_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bill_sno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:background="@color/colorPrimaryLight"
                    android:textSize="28sp"
                    android:text="01" />
                <TextView
                    android:id="@+id/bill_customer_name"
                    tools:text="Customer Name"
                    android:textSize="28sp"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />
            </LinearLayout>


                <TextView
                    android:id="@+id/bill_phone_number"
                    tools:text="1234567890"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:paddingLeft="30dp"
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:layout_weight="5"/>





        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bill_total_amount"
                tools:text="2000"
                android:textSize="28sp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/bill_date"
                tools:text="24-07-2017"
                android:gravity="right"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/bill_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp" />

</LinearLayout>